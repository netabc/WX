/* pages/hostory/main.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: #33CCCC;
  border-bottom: 1rpx solid #F8F8F8
}

.swiper-tab-list {
  font-size: 24rpx;
  display: inline-block;
  width: 33.33%;
  color: #F0F0F0;
}

.on {
  color: #ffffff;
  font-size: 32rpx;
  border-bottom: 10rpx solid #ffffff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow:visible;
}

.swiper-box view {
  text-align: center;
}
::-webkit-scrollbar{
  width: 0;
  color: transparent;
}
