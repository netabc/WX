/************************检测************************************/
.hide{
  display:none;
}
.check-container {
  clear: both;
  height: 100%;
}

.check-head {
  height: 280px;
  width: 280px;
  margin: 48rpx auto 0rpx auto;
  position: relative;
}

.check-progress {
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  height: 280px;
  width: 280px;
}

.check-tooch-info {
  margin: auto;
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  top: 0px;
  height: 240px;
  width: 240px;
  display: block;
  border-radius: 50%;
  overflow: hidden;
}

.check-tooch-inner {
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 80px;
  background: rgba(255, 255, 255, 0.4);
}

.check-tooch-label {
  font-size: 36rpx;
  margin-top: 4rpx;
  color: rgba(0, 0, 0, 0.6);
}

.check-tooch-state {
  font-size: 48rpx;
  margin-top: 8rpx;
  color: rgba(0, 0, 0, 0.8);
}

.check-tooch-image image {
  position: absolute;
  height: 240px;
  width: 240px;
  left: 0px;
  right: 0px;
  z-index: -1;
}

.check-footer {
  margin-top: 120px;
  margin-left: 48px;
}

.check-footer view {
  text-align: left;
}

.check-footer-label {
  margin-top: 12px;
  font-size: 32rpx;
  color: #3cc;
}

.check-footer-list {
  margin-top: 12px;
  font-size: 24rpx;
}

.check-footer-list view {
  margin-bottom: 4px;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.check-content {
  /* display: flex;
  flex-direction: row; */
  height: 100%;
  width: 100%;
  
  text-align: left;
  margin: 0;
}

.progress-line{
    width: 200%;
    height: 315rpx;
    /* transform: scale(0.5) */

}
.check-content text {
  margin: 0px;
  padding: 0px;
}
.check-last{
  margin-left:36rpx;
  margin-top: 24rpx;
  margin-bottom:10rpx;
}
.last-label{
  display:flex;
  font-size:36rpx; 
  padding-left: 32rpx;
  color: #3DC0B0;
}
.last-label-score{
  display: flex;
  margin-top: 40rpx;
  color: red;
}
.label-score-value{
 display: inline-block;
}
.babel-score-value{
  font-size:48rpx;
}
.babel-score-label{
  font-size:18rpx;
  color: #c4c4c4;
}
.item-score{
   display: inline-block;
   font-size:24rpx;
   line-height:44rpx;
   color: #c4c4c4;
   width:85%;
   text-align:start;
}
.score-progress{
  clear: both;
}
