.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: #3cc;
  border-bottom: 1rpx solid #f8f8f8;
}

.swiper-tab-list {
  font-size: 24rpx;
  display: inline-block;
  width: 33.33%;
  color: #f0f0f0;
}

.on {
  color: #fff;
  font-size: 32rpx;
  border-bottom: 10rpx solid #fff;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
   text-align: center;
  overflow: visible;
}

