/************************检测************************************/
.check-container{
  clear: both;
}
.check-head{
  margin-top: 48px;
  max-height: 280px;
  position: relative;
}
.check-progress{
  margin: 0 auto;
  position: absolute;
  bottom: 20px;
  left: 0px;
  right: 0px;
  height: 280px;
  width: 280px;
}
.check-tooch-info{
  margin: 0 auto;
  position: relative;
  height: 240px;
  width: 240px;
  display: block;
  border-radius:50%; 
  overflow:hidden;
}
.check-tooch-inner{
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 80px;
  background: rgba(255,255,255, .4);
}
.check-tooch-label{
  font-size: 36rpx;
  margin-top: 4rpx;
  color: rgba(0,0,0, .6);
}
.check-tooch-state{
  font-size: 48rpx;
  margin-top: 8rpx;
  color: rgba(0,0,0, .8);
}
.check-tooch-image image{
  position: absolute;
  height: 240px;
  width: 240px;
  left: 0px;
  right: 0px;
  z-index: -1;
}

.check-footer{
  margin-top: 120px;
  margin-left: 48px;
}
.check-footer view{
  text-align: left;
}
.check-footer-label{
  margin-top: 12px;
  font-size: 32rpx;
  color: #33CCCC;
}
.check-footer-list{
  margin-top: 12px;
  font-size: 24rpx;
}
.check-footer-list view{
  margin-bottom: 4px;
}
