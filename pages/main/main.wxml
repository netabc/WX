<!--pages/hostory/main.wxml-->
<view class='main-container'>
  <view class='container-header'>
  </view>
  <view class='container-content'>
    <view class="swiper-tab">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">历史</view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">检测</view>
      <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">处方</view>
    </view>
    <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 50}}px" bindchange="bindChange">
      <!-- 历史 -->
      <swiper-item>
        <include src="../hostory/hostory.wxml" />
      </swiper-item>
      <!-- 检测 -->
      <swiper-item>
        <include src="../check/check.wxml" />
      </swiper-item>
      <!-- 更多 -->
      <swiper-item>
        <include src="../more/more.wxml" />
      </swiper-item>
    </swiper>
  </view>
</view>